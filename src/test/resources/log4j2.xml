<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} %highlight{[%-5level]} [%t] %c{1.} - %msg%n"
                    disableAnsi="false" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="io.sidews.linkerman.base.BasicGrammarAnalyzerTest" level="debug" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
